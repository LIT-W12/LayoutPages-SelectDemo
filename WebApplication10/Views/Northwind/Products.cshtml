@model ProductsViewModel

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Unit Price</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    if (product.UnitPrice > 75)
                    {
                        <tr class="table-danger">
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.UnitPrice</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.UnitPrice</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>